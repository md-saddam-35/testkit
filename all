#include <stdio.h>
#include <conio.h>
int main()
{

    int a[10][10], i, j, b[2][3], c[10][10], row, colam;

    printf("enter row then colam = :");

    scanf("%d %d", &row, &colam);

    printf("enter for a matrix = :\n");
    for (i = 0; i < row; i++)
    {
        for (j = 0; j < colam; j++)
        {
            printf("[%d][%d]=", i, j);
            scanf("%d", &a[i][j]);
        }
        printf("\n");
    }

    // MATIX#include <stdio.h>
#include <conio.h>
int main()
{

    int a[10][10], i, j, b[2][3], c[10][10], row, colam;

    printf("enter row then colam = :");

    scanf("%d %d", &row, &colam);

    printf("enter for a matrix = :\n");
    for (i = 0; i < row; i++)
    {
        for (j = 0; j < colam; j++)
        {
            printf("[%d][%d]=", i, j);
            scanf("%d", &a[i][j]);
        }
        printf("\n");
    }

    // MATIX
    printf("\n\nenter for b matrix = :\n");
    for (i = 0; i < row; i++)
    {
        for (j = 0; j < colam; j++)
        {
            printf("[%d][%d]=", i, j);
            scanf("%d", &b[i][j]);
        }
        printf("\n");
    }

    printf("A = ");
    for (i = 0; i < row; i++)
    {
        printf("\t");
        for (j = 0; j < colam; j++)
        {

            printf("%d ", a[i][j] +b[i][j]);
        }
        printf("\n");
    }
getch();
}
    printf("\n\nenter for b matrix = :\n");
    for (i = 0; i < row; i++)
    {
        for (j = 0; j < colam; j++)
        {
            printf("[%d][%d]=", i, j);
            scanf("%d", &b[i][j]);
        }
        printf("\n");
    }

    printf("A = ");
    for (i = 0; i < row; i++)
    {
        printf("\t");
        for (j = 0; j < colam; j++)
        {

            printf("%d ", a[i][j] +b[i][j]);
        }
        printf("\n");
    }
getch();
}